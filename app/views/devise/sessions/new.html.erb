<div class="box mx-auto mt-6 ">
  <h1 class="title is-5">ログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "shared/error", obj: resource %>

    <div class="field">
      <div class="label">
        <%= f.label :email %><span class="tag is-danger ml-3">必須</span>
      </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス", class:"input", type:"text" %>
    </div>

    <div class="field">
      <div class="label">
        <%= f.label :password %><span class="tag is-danger ml-3">必須</span>
      </div>
        <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワード", class:"input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mb-3 has-text-centered">
      <%= f.submit "ログイン", class:"button is-link px-6 mt-3" %>
    </div>

    <div class="has-text-centered">
      <%= link_to "新しいアカウントを作成する", new_user_registration_path%>
    </div>
  <% end %>
</div>

